<div class="section">
  <p id="notice"><%%= notice %></p>
</div>

<div class="section">
  <h2><%%= t("detail", :scope => :scaffold, :model => <%= class_name %>.model_name.human) %></h2>
  <table>
    <tbody>
<% for attribute in attributes -%>
      <tr>
        <th><%%= <%= class_name %>.human_attribute_name(:<%= attribute.name %>) %></th>
        <td><%%= @<%= singular_name %>.<%= attribute.name %> %></td>
      </tr>
<% end -%>
    </tbody>
  </table>

  <p>
    <%%= link_to t('edit', :scope => :scaffold, :model => <%= class_name %>.model_name.human), @<%= singular_name %> %> |
    <%%= link_to t('list', :scope => :scaffold, :model => <%= class_name %>.model_name.human), <%= plural_name %>_path %>
  </p>
</div>
