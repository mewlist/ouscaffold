<div class="section">
  <h2><%%= t("list", :scope => :scaffold, :model => <%= class_name %>.model_name.human) %></h2>
<%%- if @<%= plural_table_name %>.present? %>
  <table>
    <thead>
      <tr>
<%- if options[:display_id] -%>
        <th>ID</th>
<% end -%>
<% for attribute in attributes -%>
        <th><%%= <%= class_name %>.human_attribute_name(:<%= attribute.name %>) %></th>
<% end -%>
        <th colspan="3"><%%= t('scaffold.operations') %></th>
      </tr>
    </thead>
    <tbody>
<%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| -%>
      <%%= tr_with_zebra %>
<%- if options[:display_id] -%>
        <td><%%= link_to <%= singular_table_name %>.id, <%= singular_table_name %> %></td>
<% end -%>
<% for attribute in attributes -%>
        <td><%%=<%= qualifier(attribute, "#{ singular_table_name }.#{ attribute.name }", :truncate => 30) %> %></td>
<% end -%>
        <td><%%= link_to t('show', :scope => :scaffold), <%= singular_table_name %> %></td>
        <td><%%= link_to t('edit', :scope => :scaffold), edit_<%= singular_table_name %>_path(<%= singular_table_name %>) %></td>
        <td><%%= link_to t('destroy', :scope => :scaffold), <%= singular_table_name %>, :confirm => t('confirm_delete', :scope => :scaffold), :method => :delete %></td> </tr>
      </tr>
<%% end -%>
    </tbody>
  </table>
<%% else -%>
<%%= t('scaffold.nodata', :model => <%= class_name %>.model_name.human ) %>
<%% end -%>

  <hr />

  <p>
    <%%= link_to t('new', :scope => :scaffold, :model => <%= class_name %>.model_name.human), new_<%= singular_table_name %>_path %>
  </p>

</div>
